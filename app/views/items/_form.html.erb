<hr>

<%= form_with(model: item, local: true) do |form| %>
  <% if item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(item.errors.count, "error") %> prohibited this item from being saved:</h2>

      <ul>
      <% item.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group row">
    <%= form.label :name, class: "col-2 col-form-label" %>
    <%= form.text_field :name, id: :item_name, class: "form-control col-10" %>
  </div>

  <div class="form-group row">
    <%= form.label :title, class: "col-2 col-form-label" %>
    <%= form.text_field :title, id: :item_title, class: "form-control col-10" %>
  </div>

  <div class="form-group row">
    <%= form.label :description, class: "col-2 col-form-label" %>
    <%= form.text_area :description, id: :item_description, class: "form-control col-10", rows: "3" %>
  </div>

  <div class="form-group row">
    <%= form.label :rakuten_url, class: "col-2 col-form-label" %>
    <%= form.text_area :rakuten_url, id: :item_rakuten_url, class: "form-control col-10" %>
  </div>

  <div class="form-group row">
    <%= form.label :price, class: "col-2 col-form-label" %>
    <%= form.number_field :price, id: :item_price, class: "form-control col-10" %>
  </div>

  <div class="form-group row">
    <%= form.label :main_image, class: "col-2 col-form-label" %>
    <%= form.text_area :main_image, id: :item_main_image, class: "form-control col-10" %>
  </div>

  <%= form.hidden_field :table_id, :id => :item_table_id %>

  <div class="form-group row">
    <%= form.label :active, class: "col-2 col-form-label" %>
    <%= form.check_box :active, id: :item_active, class: "form-control col-10" %>
  </div>

  <% item.table.columns.order(:priority).each do |column| %>
    <div class="form-group row">
      <%= form.label column.name, class: "col-2 col-form-label" %>
      <%= form.text_field "column[#{column.id}]", value: @item.element_value(column), id: "column#{column.id}", class: "form-control col-10" %>
    </div>
  <% end %>

  <div class="actions">
    <%= form.submit :class => 'btn btn-primary' %>
  </div>

<% end %>

<hr>
